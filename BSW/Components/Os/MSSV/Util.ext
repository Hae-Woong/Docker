/**********************************************************************************************************************
* Name         : ExplicitCastToInt
* Parameter    : uint8_t or uint16_t value which should be casted
* Return value : value as uint32_t
* Description  : Using method to_string on values of type uint8_t results in characters. Therefore, they have to be
*                casted to uint32_t in order to be printed as numeric values. The scripting language uses uint32_t
*                internally for all calculations. Performing a simple addition does the trick.
**********************************************************************************************************************/
def ExplicitCastToInt(value)
{
  var temp = 0 + value;
  return temp;
}

/**********************************************************************************************************************
* Name         : GetStackNameByType
* Parameter    : cfg: the stack owning config object
* Parameter    : type: the type of cfg
* Return value : name of the stack of cfg
* Description  : Extracts the name of the used stack for the thread by the extended types
**********************************************************************************************************************/
def GetStackNameByType(cfg, type)
{
  var name = cfg.GetName();
  var typeName = RemoveConst(type);
  var threadParentCfg;
  switch(typeName)
  {
    case("Os_TimerIsrConfigType")
    {
      threadParentCfg = cfg.GetMemberAsStruct("Isr");
      break;
    }
    case("Os_XSigIsrConfigType")
    {
      threadParentCfg = cfg.GetMemberAsStruct("IsrCfg");
      break;
    }
    case("Os_HookStatusHookConfigType")
    {
      /* Intentional Fall Through */
    }
    case("Os_HookCallbackConfigType")
    {
      /* Intentional Fall Through */
    }
    case("Os_HookProtectionHookConfigType")
    {
      /* Intentional Fall Through */
    }
    case("Os_HookInitHookConfigType")
    {
      threadParentCfg = cfg.GetMemberAsStruct("Hook");
      break;
    }
    case("Os_IsrConfigType")
    {
      /* Intentional Fall Through */
    }
    case("Os_TaskConfigType")
    {
      threadParentCfg = cfg;
      break;
    }
    default
    {
      AssertionFail("Unknown Thread type: "+typeName);
    }
  }
  var thread = threadParentCfg.GetMemberAsStruct("Thread");
  var tStackName = thread.GetMemberAsString("Stack");
  return tStackName;
}

/**********************************************************************************************************************
* Name         : ForEachStructElementInArray
* Parameter    : array:  array containing pointers to structs
* Parameter    : func:   function that is called for each element
* Return value : None
* Description  : Calls the function func for each array element
**********************************************************************************************************************/
def ForEachStructElementInArray(arr, func)
{
  var size := arr.GetSize();

  for(var i = 0; i < size; ++i)
  {
      var elem := arr.GetElemAsStruct(i);
      func(elem);
  }
}

