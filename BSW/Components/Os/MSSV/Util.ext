def IsDefineStdOn(defineName)
{
  var val = Define(defineName).GetValueAsString();

  if(val == "(STD_ON)")
  {
    return true;
  }
  else if(val == "(STD_OFF)")
  {
    return false;
  }
  else
  {
    AssertionFail("Define "+defineName+" is not of type STD_ON/OFF");
  }
}

def AssertStructMemberValidIfConfigured(str, name, defineName)
{
  if (IsDefineStdOn(defineName))
  {
    AssertStructMemberNotNull(str, name);
  }
  else
  {
    AssertStructMemberNull(str, name);
  }
}

def AssertStackNotEqual(cfg, type, refStackOwnerCfg, refStackOwnerCfgType)
{
  if (cfg.GetName() != refStackOwnerCfg.GetName()){
    var refStackName = GetStackNameByType(refStackOwnerCfg, refStackOwnerCfgType);
    var cfgStackName = GetStackNameByType(cfg, type);
    if (refStackName == cfgStackName){
      AssertionFail(refStackOwnerCfg.GetName() + " unexpectedly uses the same stack like " + cfg.GetName());
    }
  }
}

